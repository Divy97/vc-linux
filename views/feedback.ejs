<!DOCTYPE html>

<html lang="en" dir="ltr">

<head>
    <meta charset="utf-8">
    <title>Transparent Login Form HTML CSS</title>
    <link rel="stylesheet" href="css/login.css">
    <link rel="stylesheet" href="css/main.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
</head>

<body>
    <header id="nav">
        <div class="nav--list">
            <a href="/">
                <h3 id="logo">
                    <img src="assets/logo.png" alt="Site Logo">
                    <span>Blah</span>
                </h3>
            </a>
        </div>

        <div id="nav__links">
            <a class="nav__link" href="/">
                Lobby
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="#ede0e0" viewBox="0 0 24 24">
                    <path
                        d="M20 7.093v-5.093h-3v2.093l3 3zm4 5.907l-12-12-12 12h3v10h7v-5h4v5h7v-10h3zm-5 8h-3v-5h-8v5h-3v-10.26l7-6.912 7 6.99v10.182z" />
                </svg>
            </a>

        </div>
    </header>
    <div class="bg-img">
        <div class="content">
            <header>Feedback Form</header>
            <form action="#" id="login_form">
                <div class="field">
                    <span class="fa fa-user"></span>
                    <input type="text" id='email' required placeholder="Email">
                </div>
                <div class="field space">
                    <span class="fa fa-mind"></span>
                    <input type="text" id='category' class="pass-key" required placeholder="Category">
                </div>
                <div class="field space" style="height:5rem">
                    <span class="fa fa-mind"></span>
                    <input type="text" id='description' class="pass-key" required placeholder="Description">
                </div>
                <br />
                <div class="field">
                    <input type="submit" value="SUBMIT">
                </div>
            </form>



        </div>
    </div>
    <script>


        const form = document.getElementById('login_form');

        form.addEventListener('submit', (event) => {
            event.preventDefault();

            // Get the values of the email and password fields
            const email = document.getElementById('email').value;
            const category = document.getElementById('category').value;
            const description = document.getElementById('description').value;

            // Send the data to the API using the fetch() method
            var myHeaders = new Headers();
            myHeaders.append("Content-Type", "application/json");

            var raw = JSON.stringify({
                email: email,
                category: category,
                description: description
            });

            var requestOptions = {
                method: 'POST',
                headers: myHeaders,
                body: raw,
                redirect: 'follow'
            };

            fetch("http://localhost:3001/api/user/setFeedback", requestOptions)
                .then(response => response.text())
                .then(result => {
                    alert("Feedback submitted successfully")
                    window.location.href = '/landingPage.ejs'
                })
                .catch(error => {
                    window.location.href = '/landingPage.ejs'
                    console.log(error);
                });

        });
    </script>
</body>

</html>